<div class="auth-container">
  <div class="login-signup">
    <%# Tab Nab %>
    <ul class="nav" id="signintabs" role="tablist">
      <li class="nav-item">
          <a class="nav-link active" id="login-tab" data-bs-toggle="tab" href="#login-content" role="tab" aria-controls="login-content" aria-selected="true">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="signup-tab" data-bs-toggle="tab" href="#signup-content" role="tab" aria-controls="signup-content" aria-selected="false">Sign up</a>
      </li>
    </ul>
    <%# Tab Content %>
    <div class="tab-content" id="loginTabContent">
      <%# Login Tab %>
      <div id="login-content" class="tab-pane fade show active" role="tabpanel" aria-labelledby="login-tab">
        <%= render "devise/sessions/form" %>
      </div>

      <%# Sign up tab %>
      <div id="signup-content" class="tab-pane fade" role="tabpanel" aria-labelledby="signup-tab">
        <%= render "devise/registrations/form" %>
      </div>
    </div>
  </div>
</div>
